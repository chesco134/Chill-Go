<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titulo_infografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/articulos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/legalidad"
            android:padding="20sp" />

        <TextView
            android:id="@+id/enlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/articulos"
            android:padding="20sp" />

        <TextView
            android:id="@+id/multa_o_corralon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/marco_textview"
            android:gravity="center_horizontal"
            android:layout_below="@+id/enlace"
            android:padding="20sp" />

        <TextView
            android:id="@+id/informacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/marco_textview"
            android:gravity="center_horizontal"
            android:layout_below="@+id/multa_o_corralon"
            android:layout_margin="20sp"
            android:padding="20sp" />

        <TextView
            android:id="@+id/que_procede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/informacion"
            android:layout_margin="20sp"
            android:textSize="20sp"
            android:textColor="#447a90"
            android:text="@string/que_procede" />

        <ImageView
            android:id="@+id/conductor_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:contentDescription="@string/hello_world"
            android:layout_margin="20sp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/conductor_simple" />

        <TextView
            android:id="@+id/legalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_infografia"
            android:layout_centerHorizontal="true"
            android:background="@drawable/marco_textview"
            android:gravity="center_horizontal"
            android:padding="20sp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>