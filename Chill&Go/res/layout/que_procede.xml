<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titulo_infografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consejo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_infografia"
            android:background="@drawable/marco_textview"
            android:gravity="center_horizontal"
            android:padding="20sp" />

        <TextView
            android:id="@+id/consejo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/consejo_1"
            android:padding="20sp" />

        <TextView
            android:id="@+id/captura_tus_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/consejo_2"
            android:layout_margin="20sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#447a90"
            android:text="@string/captura_tus_datos" />

        <ImageView
            android:id="@+id/conductor_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:contentDescription="@string/hello_world"
            android:layout_margin="20sp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/conductor_simple" />
    </RelativeLayout>

</ScrollView>